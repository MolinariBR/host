{
  "name": "host-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json && tsc prisma/seed.ts --outDir dist/prisma --esModuleInterop --target ES2022 --moduleResolution node",
    "start": "node dist/src/server.js",
    "test:integration": "npm run prisma:seed && tsx --test src/tests/integration.test.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "node dist/prisma/seed.js",
    "prisma:studio": "prisma studio"
  },
  "prisma": {
    "seed": "node dist/prisma/seed.js"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@fastify/static": "6.12.0",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "3.0.0",
    "@prisma/client": "6.17.1",
    "bcryptjs": "2.4.3",
    "dotenv": "16.6.1",
    "fastify": "4.29.1",
    "jsonwebtoken": "9.0.2",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.3.0",
    "prisma": "^6.17.1",
    "tsx": "4.20.4",
    "typescript": "5.9.2"
  }
}